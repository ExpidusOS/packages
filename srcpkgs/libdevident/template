# Template file for 'libdevident'
pkgname=libdevident
version=0.1.0
revision=1
build_style=meson
wrksrc="libdevident-master"
depends="glib"
makedepends="glib-devel"
hostmakedepends="pkg-config"
short_desc="A device identification library"
maintainer="Tristan Ross <rosscomputerguy@protonmail.com>"
license="GPL-3.0-only"
homepage="http://expidusos.com"
distfiles="https://github.com/ExpidusOS/libdevident/archive/master.tar.gz"
