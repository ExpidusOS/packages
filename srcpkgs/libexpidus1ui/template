# Template file for 'libexpidus1ui'
pkgname=libexpidus1ui
version=0.1.0
revision=3
build_style=gnu-configure
build_helper="gir"
wrksrc="libexpidus1ui-master"
configure_args="--with-locales-dir=/usr/share/locale --disable-static"
conf_files="/etc/xdg/expidus1/esconf/expidus-perchannel-xml/expidus1-keyboard-shortcuts.xml"
hostmakedepends="xfce4-dev-tools pkg-config intltool glib-devel gettext-devel"
makedepends="gtk+3-devel glade3-devel libexpidus1util-devel esconf-devel
 libxml2-devel startup-notification-devel libSM-devel"
short_desc="GUI library for ExpidusOS Shell"
maintainer="Tristan Ross <rosscomputerguy@protonmail.com>"
license="LGPL-2.0-or-later"
homepage="http://expidusos.com"
distfiles="https://github.com/ExpidusOS/libexpidus1ui/archive/master.tar.gz"
checksum=7c436ede48c59df1dfd26c1e059b001efc7a07243a3f22d607b911e45289df0e

# Package build options
build_options="gir"
build_options_default="gir"

do_configure() {
	./autogen.sh ${configure_args}
}

libexpidus1ui-devel_package() {
	depends="${makedepends} ${sourcepkg}>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/pkgconfig
		vmove "usr/lib/*.so"
		if [ "$build_option_gir" ]; then
			vmove usr/share/gir-1.0
		fi
	}
}

libexpidus1ui-glade_package() {
	short_desc+=" - glade plugins"
	pkg_install() {
		vmove usr/lib/glade
		vmove usr/share/glade
	}
}
