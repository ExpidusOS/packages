# Template file for 'libexpidus1util'
pkgname=libexpidus1util
wrksrc="libexpidus1util-master"
version=0.1.0
revision=1
build_style=gnu-configure
build_helper="gir"
configure_args="--with-locales-dir=/usr/share/locale"
hostmakedepends="pkg-config intltool xfce4-dev-tools gettext-devel"
makedepends="libglib-devel gettext-devel"
short_desc="Utility library for the ExpidusOS Shell"
maintainer="Tristan Ross <rosscomputerguy@protonmail.com>"
license="LGPL-2.0-or-later"
homepage="http://expidusos.com"
distfiles="https://github.com/ExpidusOS/libexpidus1util/archive/master.tar.gz"
checksum=4f077ce9110ba8e966810ca69337bb9b678410a911b1d53a58b917309924bf75

# Package build options
build_options="gir"
build_options_default="gir"

do_configure() {
	./autogen.sh ${configure_args}
}

libexpidus1util-devel_package() {
	depends="libglib-devel ${sourcepkg}>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/pkgconfig
		vmove "usr/lib/*.so"
		if [ "$build_option_gir" ]; then
			vmove usr/share/gir-1.0
		fi
	}
}
