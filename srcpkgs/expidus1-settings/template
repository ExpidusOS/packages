build_style=gnu-configure
wrksrc="settings-master"
configure_args="--with-locales-dir=/usr/share/locale
 --enable-sound-settings --enable-pluggable-dialogs --enable-xrandr"
hostmakedepends="intltool pkg-config gettext-devel xfce4-dev-tools"
makedepends="endo-devel markon-devel libcanberra-devel libnotify-devel
 libxklavier-devel upower-devel libXrandr-devel libdevident-devel"
depends="desktop-file-utils papirus-icon-theme libdevident"
conf_files="/etc/xdg/expidus1/esconf/expidus-perchannel-xml/xsettings.xml"
short_desc="ExpidusOS settings manager"
maintainer="Tristan Ross <rosscomputerguy@protonmail.com>"
license="GPL-2.0-only"
homepage="http://expidusos.com"
distfiles="https://github.com/ExpidusOS/settings/archive/master.tar.gz"
